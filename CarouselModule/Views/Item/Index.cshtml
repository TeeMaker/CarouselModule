@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<Carousel.Dnn.CarouselModule.Models.Item>>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" style="height: 600px; background-image: url(http://20.234.113.211:8085/portals/0/High_resolution_wallpaper_background_ID_77700102690_1.jpg?ver=Ww1_e9LDDNRHsFRNhtl8QQ%3d%3d); background-size: cover; background-repeat: no-repeat; background-position: center center;">
            <a href="http://20.234.113.211:8085/">
            </a>
        </div>
        @if (Model.Count() == 0)
        {
            <p>@Dnn.LocalizeString("NoItems")</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="carousel-item" style="height: 600px; background-image: url( @item.ItemImgPath.Replace("/", "//") ); background-size: cover; background-repeat: no-repeat; background-position: center center;">
                    <a href="@item.ItemLink">

                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark titleBox">@item.ItemTitle</h5>
                            @{
                                if (Dnn.ModuleContext.IsEditable)
                                {
                                    <div>
                                        <a href="@Url.Action("Edit", "Item", new {ctl = "Edit", itemId = item.ItemId})">@Dnn.LocalizeString("EditItem")</a> |
                                        <a href="@Url.Action("Delete", "Item", new {itemId = item.ItemId})">@Dnn.LocalizeString("DeleteItem")</a>
                                    </div>
                                }
                            }
                        </div>
                    </a>
                </div>
                
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .titleBox {
        --bs-bg-opacity: .50;
        padding: 5px;
    }
</style>
